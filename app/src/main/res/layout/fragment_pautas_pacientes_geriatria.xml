<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Home.Fragments.Alumnos.PautasPacientesGeriatriaFragment">

    <TextView
        android:id="@+id/pautasLabel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/pautas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/md_theme_light_surfaceTint"
        android:textColor="@color/md_theme_white"
        android:autoSizeTextType="uniform"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPautas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pautasLabel" />

    <TextView
        android:id="@+id/anatomicosLabel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/anatomicos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewPautas"
        android:background="@color/md_theme_light_surfaceTint"
        android:textColor="@color/md_theme_white"
        android:autoSizeTextType="uniform"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnatomicos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anatomicosLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>