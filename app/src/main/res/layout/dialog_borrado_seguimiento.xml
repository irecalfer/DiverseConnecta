<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_exit_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!-- exit the app textview -->
    <TextView
        android:id="@+id/TVTextoBorrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="00dp"
        android:gravity="center"
        android:text="@string/borradoSeguimiento"
        android:textSize="@dimen/defaultTextSize"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- No  Text View -->
        <TextView
            android:id="@+id/textViewNo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/md_theme_dark_onError"
            android:elevation="8dp"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/md_theme_white"
            android:textSize="20sp"/>

        <!-- Yes Text View -->
        <TextView
            android:id="@+id/textViewSi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/md_theme_light_surfaceTint"
            android:elevation="8dp"
            android:gravity="center"
            android:text="@string/si"
            android:textColor="@color/md_theme_white"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
