<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:background="@color/md_theme_light_surfaceTint"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/fotoEmpleadoND"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:src="@drawable/cierre_sesion_icon" />

    <TextView
        android:id="@+id/nombreEmpleadoND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Knowledge"
        android:textColor="@color/md_theme_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/unidadND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="contact@androidknowledge.com"
        android:textColor="@color/md_theme_white"
        android:textSize="14sp" />


</LinearLayout>